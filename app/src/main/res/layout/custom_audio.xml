<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cvArtistAudioCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCustomArtistSong"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="The Hustler"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout2"
            android:layout_below="@id/tvCustomArtistSong"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:id="@+id/ivCustomArtistAudio"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/tvTimerAudio"
                android:layout_gravity="right" />


        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="3"
           android:layout_below="@id/linearLayout2"
           android:id="@+id/linearLayout3">


           <Button
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/btnPause"
               android:text="Pause"
               android:layout_weight="1"/>

           <Button
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/btnPlay"
               android:text="Play"
               android:layout_weight="1"/>

           <Button
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/btnStop"
               android:text="Stop"
               android:layout_weight="1"/>



       </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Produced By: Zanoxolo"
            android:id="@+id/tvCustomArtistProduced"
            android:textAlignment="center"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>



</android.support.v7.widget.CardView>