<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cdArtist"
    card_view:cardCornerRadius="@dimen/cardCornerRadius"
    card_view:cardElevation="@dimen/cardElevation"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvArtistName"
            android:textStyle="bold"
            android:text="Zanoxolo"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ivArtist"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of albums: 3"
            android:id="@+id/tvArtistNumberAlbum"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvArtistLatestAlbum"
            android:text="Won't Let Go"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lastest Single: Man Of The Year"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tvArtistSingle"
            android:textSize="14sp"
            android:textStyle="italic"/>






    </LinearLayout>

    </RelativeLayout>






</android.support.v7.widget.CardView>